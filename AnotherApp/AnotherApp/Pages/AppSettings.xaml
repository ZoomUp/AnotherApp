<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnotherApp.Pages.AppSettings"
             Title="AppSettings">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Background="{DynamicResource Key=backColor}" Padding="30" Spacing="40">
            <Label Text="Choose color:"/>
            <Picker x:Name="ColorPicker" SelectedIndexChanged="ColorPicker_SelectedIndexChanged"/>
            <Frame x:Name="VisualColor"
                   BackgroundColor="White"
                   CornerRadius="25"
                   HeightRequest="20"
                   WidthRequest="20"/>

            <Button x:Name="ChangeAppColor" Text="Change App color" Clicked="ChangeAppColor_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>