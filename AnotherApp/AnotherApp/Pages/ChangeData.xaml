<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnotherApp.Pages.ChangeData">
    <ContentPage.Content>
        <StackLayout Background="{DynamicResource Key=backColor}">
            <Image x:Name="UserImage" HeightRequest="200"/>
            <Label Text="First Name"/>
            <Entry x:Name="FirstNameChange" Text=""/>
            <Label Text="Last Name"/>
            <Entry x:Name="LastNameChange" Text=""/>
            <Label Text="Email"/>
            <Entry x:Name="EmailChange" Text=""/>
            <Button x:Name="SaveButton" Text="Save" Clicked="SaveButton_Clicked"/>
            <Button x:Name="CancelButton" Text="Cancel" Clicked="CancelButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>